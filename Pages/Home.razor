@page "/"
@using JDR.Models

<h4 id="title">Grille avec Joueur</h4>

<div 
    class="grid" 
    tabindex="0"
    @onkeydown="HandleKeyDown"
    @ref="gridRef"
    autofocus
>
    @for (int row = 0; row < GridSize; row++)
    {
        @for (int col = 0; col < GridSize; col++)
        {
            <div class="cell @(row == player.Y && col == player.X ? $"sprite {player.FacingDirection}" : "")"></div>
        }
    }
</div>

